  <div class="container">
    <div class="row">
      <div class="col-md-8 mt-2">
        <ul class="list-inline custom-breadcrumb">
          <li class="list-inline-item"><a class="h2 text-primary font-secondary" href="@@page-link">Contact Us</a></li>
          <li class="list-inline-item text-white h3 font-secondary @@nasted"></li>
        </ul>
        <p class="text-lighten">Do you have other questions? Don't worry, there aren't any dumb questions. Just fill out the form below and we'll get back to you as soon as possible.</p>
      </div>
    </div>
  </div>
</section>
<!-- /page title -->
  	
  	<!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
    	<div class="container" data-aos="fade-up">

    		<div class="section-title">
    			<h3 class="text-white">Contact us</h3>
    		</div>

    		<div class="row" data-aos="fade-up" data-aos-delay="100">

    			<div class="col-lg-12">

    				<div class="row">
    					<div class="col-md-12">
    						<div class="info-box">
    							<i class="bx bx-map"></i>
    							<h3>Our Address</h3>
    							<p><%= College.last.country %><br><%= College.last.city %><br><%= College.last.sub_city %></p>
    						</div>
    					</div>
    					<div class="col-md-6">
    						<div class="info-box mt-4">
    							<i class="bx bx-envelope"></i>
    							<h3>Email Us</h3>
    							<p><%= College.last.email %></p>
    						</div>
    					</div>
    					<div class="col-md-6">
    						<div class="info-box mt-4">
    							<i class="bx bx-phone-call"></i>
    							<h3>Call Us</h3>
    							<p><%= College.last.phone_number %><br><%= College.last.alternative_phone_number %></p>
    						</div>
    					</div>
    				</div>

    			</div>
    		</div>

    	</div>
    </section>
 <!-- add commentSection -->
	      <section id="contact" class="contact">
    	<div class="container" data-aos="fade-up">

    		<div class="section-title">
    			<h2>Add Comment</h2>
    		</div>
			
    		<div class="row" data-aos="fade-up" data-aos-delay="100">

    			<div class="col-lg-12">
					<%= simple_form_for(VisitorComment.new, url: visitor_comments_path, html: { class: 'php-email-form'}) do |f| %>
						<div class="form-row">
    						<div class="col form-group">
								<%= f.input :fullname, class: "form-control"%>
    							<div class="validate"></div>
    						</div>
    						<div class="col form-group">
								<%= f.input :category, collection: ["testimonial", "comment", "review"], class: "form-control"%>
    							<div class="validate"></div>
    						</div>
    					</div>
    					<div class="form-group">
							<%= f.input :subject, class: "form-control"%>
    						<div class="validate"></div>
    					</div>
    					<div class="form-group">
							<%= f.input :message, class: "form-control", type: 'text'%>
    						<div class="validate"></div>
    					</div>
    					<div class="mb-3">
    						<div class="loading">Loading</div>
    						<div class="error-message"></div>
    						<div class="sent-message">Your message has been sent. Thank you!</div>
    					</div>
						<%= f.submit 'Send Message', class: 'btn btn-primary text-white'%>
    					<% end %>
    			</div>
    		</div>

    	</div>
    </section>
  	
  <!--marketing-->
  <section class="section bg-primary">
    <div class="container">
      <% @marketing.where(page_to_display: 'contact').each do |m|%>
        <div class="text-center">
          <h2 class="text-muted"><%= m.headline_title.html_safe%></h2>
          <p  class="text-muted"><%= m.description.html_safe%></p>
          <%link_to "#{m.action}", class:"cta-btn" do %>Learn more<%end%>
        </div>
      <% end %>
    </div>
  </div>
</section>
<!-- /marketing -->
  	
<!-- ======= Frequently Asked Questions Section ======= -->
<section id="faq" class="faq">
  <div class="container" data-aos="fade-up">

    <div class="section-title">
      <h2>Frequently Asked Questions</h2>
    </div>

    <ul class="faq-list" data-aos="fade-up">
      <% @faq.each do |c, i|%>
        <li>
        <a data-toggle="collapse" class="collapsed" href="#faq1<%= c.id %>"><%= c.question%>? <i class="bx bx-chevron-down icon-show"></i><i class="bx bx-x icon-close"></i></a>
        <div id="faq1<%= c.id %>" class="collapse" data-parent=".faq-list">
          <p>
          <%= c.answer%>
          </p>
        </div>
      </li>
    <% end %>

    </ul>

  </div>
</section><!-- End Frequently Asked Questions Section -->
  </main>

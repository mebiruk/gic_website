<main id="main">
    <!-- page title -->
<section class="hero-section-page-title overlay bg-cover" data-background="pic2.jpg">
    <style scoped>
        .on-the-fly-behavior-button {
            width: 45hv;
        }
        .on-the-fly-behavior-training{
            margin-left: -13vh;
            margin-right: -5vh;
        }
        .on-the-fly-behavior {
            margin-left: -7vh;
            margin-right: -7vh;
        }
        @media (max-width: 1000px) {
            .on-the-fly-behavior {
              margin-left: 1vh; 
              margin-right: 1vh;
            }
            .on-the-fly-behavior-button {
                max-width: 45hv;
            }
            .on-the-fly-behavior-training{
                width: auto;
                margin-left: 1vh; 
                margin-right: 1vh;
            }
        }
    </style>
    <div class="container">
        <div class="row">
            <div class="col-md-8 mt-2">
                <ul class="list-inline custom-breadcrumb">
                    <li class="list-inline-item"><a class="h2 text-primary font-secondary" href="courses.html">Our
                            Training</a></li>
                    <li class="list-inline-item text-white h3 font-secondary "></li>
                </ul>
                <p class="text-lighten">Our Trainings offer a good compromise between the continuous assessment
                    favoured by some universities and the emphasis placed on final exams by others.</p>
            </div>
        </div>
    </div>
</section>

<section class="section">
<div class="container">
    <h2 class="text-center mb-3">Our Training</h2>
    <% if Training.all.blank? %>
    <%else%>
    <div class="row on-the-fly-behavior-training">
    <% end %>
        <%Training.all.each do |pro|%>
            <!-- course item -->
            <div class="col-lg-3">
            <div class="card p-0 border-primary rounded-0 hover-shadow">
            <%= image_tag pro.photo, class:"card-img-top rounded-0", style:"height: 28vh;"%>
                <div class="card-body d-flex flex-column" style="height: 50vh;">
                <ul class="list-inline mb-2">
                    <li class="list-inline-item text-uppercase text-color"></i>Training</li>
                </ul>
                
                <h4 class="card-title"><%=pro.training_name.html_safe%></h4>
                <p class="card-text mb-1"><%=pro.overview.truncate(140).html_safe%></p>
                <%= link_to 'Read More', training_path(pro), class:"btn btn-primary btn-sm rounded on-the-fly-behavior-button", style:"position: absolute; bottom: 0; display: block;" %>
                </div>
            </div>
            </div>
            <!-- course item -->
        <%end%>
        </div>
    </div>
</section>


<section class="section">
<div class="container">
    <h2 class="text-center mb-3">Our Research</h2>
    <%Department.all.each do |dep|%>
        <% if Program.where(study_level: 'research').where(department_id: dep.id).blank? %>
        <%else%>
        <div class="row on-the-fly-behavior">
        <% end %>
        <%Program.where(study_level: 'research').where(department_id: dep.id).each do |pro|%>
            <!-- course item -->
            <div class="col-lg-3 mb-5 d-flex align-self-stretch" style="width: 23rem;">
            <div class="card p-0 border-primary rounded-0 hover-shadow">
            <%= image_tag pro.photo, class:"card-img-top rounded-0", style:"height: 28vh;"%>
                <div class="card-body d-flex flex-column" style="height: 50vh;">
                <ul class="list-inline mb-2">
                <li class="list-inline-item text-uppercase text-color"></i><%= pro.modality%></li>

                </ul>
                <%=link_to program_path(pro) do %>
                    <h4 class="card-title"><%=pro.program_name.html_safe%></h4>
                <%end%>
                <p class="card-text mb-1"><%=pro.overview.truncate(140).html_safe%></p>
                <%= link_to 'Read More', program_path(pro), class:"btn btn-primary btn-sm rounded on-the-fly-behavior-button", style:"position: absolute; bottom: 0; display: block;" %>
                </div>
            </div>
            </div>
            <!-- course item -->
        <%end%>
        </div>
    <% end %>
    </div>
</section>

    <section class="section bg-primary">
        <div class="container">
            <% @marketing.where(page_to_display: 'programs' ).each do |m|%>
                <div class="text-center">
                    <h2 class="text-muted">
                        <%= m.headline_title.html_safe%>
                    </h2>
                    <p class="text-muted">
                        <%= m.description.html_safe%>
                    </p>
                    <%link_to "#{m.action}" , class:"cta-btn" do %>Learn more<%end%>
                </div>
                <% end %>
        </div>
        </div>
    </section>
    <!-- /marketing -->
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container" data-aos="fade-up">
            <div class="section-title">
                <h2>Contact</h2>
            </div>
            <div class="row" data-aos="fade-up" data-aos-delay="100">
                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="info-box">
                                <i class="bx bx-map"></i>
                                <h3>Our Address</h3>
                                <p><%= College.last.country%><br><%= College.last.city%><br><%= College.last.sub_city%></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box mt-4">
                                <i class="bx bx-envelope"></i>
                                <h3>Email Us</h3>
                                <p><%= College.last.email%><br></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box mt-4">
                                <i class="bx bx-phone-call"></i>
                                <h3>Call Us</h3>
                                <p><%= College.last.phone_number%><br>
                                <%= College.last.alternative_phone_number%></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <%= simple_form_for(VisitorComment.new, url: visitor_comments_path, html: { class: 'php-email-form'
                        }) do |f| %>
                        <div class="form-row">
                            <div class="col form-group">
                                <%= f.input :fullname, class: "form-control" %>
                                    <div class="validate"></div>
                            </div>
                            <div class="col form-group">
                                <%= f.input :category, collection: ["testimonial", "comment" , "review" ],
                                    class: "form-control" %>
                                    <div class="validate"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <%= f.input :subject, class: "form-control" %>
                                <div class="validate"></div>
                        </div>
                        <div class="form-group">
                            <%= f.input :message, class: "form-control" , type: 'text' %>
                                <div class="validate"></div>
                        </div>
                        <div class="mb-3">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>
                            <div class="sent-message">Your message has been sent. Thank you!</div>
                        </div>
                        <%= f.submit 'Send Message' , class: 'btn btn-primary text-white' %>
                            <% end %>
                </div>
            </div>
        </div>
    </section>
    <!-- End contact Section -->
</main>
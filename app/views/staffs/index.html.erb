  <main id="main">
  <section class="section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12">
          <h2 class="section-title">Our Staff</h2>
        </div>
        <!-- staffs -->
        <%=@staffs.each do |staff|%>
          <div class="col-lg-4 col-sm-6 mb-5 mb-lg-0">
            <div class="card border-0 rounded-0 hover-shadow">
              <%= image_tag staff.photo, class:"card-img-top rounded-0" %>
              <div class="card-body">
                <%= link_to staff_path(staff) do %>
                  <h4 class="card-title"><%=staff.fullname%></h4>
                <%end%>
                <div class="d-flex justify-content-between">
                  <span><%=staff.job_title%></span>
                </div>
              </div>
            </div>
          </div>
        <%end%>
        <!-- staffs -->
      </div>
      <%= paginate @staffs %>
    </div>
  </section>
</main>
